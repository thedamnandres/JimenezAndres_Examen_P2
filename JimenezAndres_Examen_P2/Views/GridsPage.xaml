<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JimenezAndres_Examen_P2.Views.GridsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <BoxView 
            Color="White" 
            Grid.Row="0" 
            Grid.Column="0" />
        
        <BoxView 
            Color="DarkGrey" 
            Grid.Row="0" 
            Grid.Column="1" />
        
        <BoxView 
            Color="DimGrey" 
            Grid.Row="1" 
            Grid.Column="0" />
        
        <BoxView 
            Color="Black" 
            Grid.Row="1" 
            Grid.Column="0" />
       
        
    </Grid>
</ContentPage>